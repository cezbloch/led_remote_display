<MainScreen>
    name: 'main_screen'
    BoxLayout:
        id: reactive_layout
        padding: 20
        spacing: 10
        orientation: 'vertical'
        Image:
            source: 'resources\keesware_led_banner.gif'
            allow_stretch: True
            anim_delay: 1/10.0
            keep_ratio: False
        AutoTextSizeButton:
            text: "Create Animation"
            on_release: app.root.current = 'project_screen'
        AutoTextSizeButton:
            text: "Open Animation"
            on_release: app.root.current = 'file_chooser_screen'
        AutoTextSizeButton:
            text: "Connect to Display"
            on_release: app.root.current = 'connect_display_screen'
        AutoTextSizeButton:
            text: "Live"