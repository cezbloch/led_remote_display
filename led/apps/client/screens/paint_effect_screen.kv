#:import TouchWidget ui.touch_widget

<PaintEffectScreen>
    name: 'paint_effect_screen'
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.2
            ColorButton:
                id: brush_color_button
                text: "Brush Color"
                background_color: (0, 0, 1, 1)
                on_press: root.button_pressed(self)

            Button:
                id: clear_button
                text: "Clear"
                on_press: root.clear_canvas()

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.2
            Slider:
                id: point_size_slider
                min: 1
                max: 100
                value: 10
                on_value: root.point_size_changed()

            Label:
                id: speed_label
                size_hint: 0.3, 1
                text: 'point size'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.2
            Slider:
                id: scroll_speed_slider
                min: 0
                max: 30
                value: 15
                on_value: root.schedule_frame_updates()

            Label:
                id: speed_label
                size_hint: 0.3, 1
                text: 'scroll speed'