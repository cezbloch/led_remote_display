#:import ColorButton ui.color_button

<RainbowEffectScreen>
    name: 'rainbow_effect_screen'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, 0.3
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                ColorButton:
                    id: left_color_button
                    text: "Left Start"
                    background_color: (1, 0, 0, 1)
                    group: 'color'
                    on_press: root._selected_button = self

                ColorButton:
                    id: left_color_button_end
                    text: "Left End"
                    background_color: (0, 1, 0, 1)
                    group: 'color'
                    on_press: root._selected_button = self
            BoxLayout:
                orientation: 'vertical'
                ColorButton:
                    id: right_color_button
                    text: "Right Start"
                    background_color: (0, 0, 1, 1)
                    group: 'color'
                    on_press: root._selected_button = self

                ColorButton:
                    id: right_color_button_end
                    text: "Right End"
                    background_color: (1, 1, 1, 1)
                    group: 'color'
                    on_press: root._selected_button = self

        ColorPicker:
            id: color_picker
            color: (0, 0, 1, 1)
            on_color: root.on_color()

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.2
            Slider:
                id: speed_slider
                min: 0
                max: 30
                value: 30
                on_value: root.animation_speed_changed()

            Label:
                id: fps_label
                size_hint: 0.2, 1